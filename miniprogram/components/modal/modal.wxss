/* components/modal/modal.wxss */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 99;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
}

.panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.modal .icon-guanbi {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  /* 增加点击区域 */
  padding: 20rpx;
}